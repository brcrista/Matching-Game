{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "outDir": "out",
        "target": "ES2015",
        "module": "commonjs",
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "out",
        "test"
    ]
}